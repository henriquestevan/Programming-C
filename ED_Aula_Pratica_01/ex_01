#include <stdio.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL,"portuguese");

	int numero, contador=0, resto;

	printf("Digite um número:");
        scanf("%d",&numero);

	while(numero !=0)
	{
		printf("\nValor atual do número: %d\n", numero);

		resto = numero % 10;
		
		if(resto==7 || resto==-7){
		
			contador++; }	

		numero = numero / 10;

		printf("Apos dividir por 10, o novo valor e: %d\n", numero);
	}

	printf("\nO número digitado possui %d dígitos 7", contador);

	return 0;
}
